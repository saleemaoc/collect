    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_marginTop="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"

                    android:gravity="center_horizontal" >

                    <ImageButton

                        android:id="@+id/enter_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_bg"
                        android:src="@drawable/fill"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"  >
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/enter_data"
                        android:clickable="false"
                        android:text="Fill Form"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/send_data"
                        android:layout_width="wrap_content"
                        android:background="@drawable/round_bg"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/send" >
                    </ImageButton>

                    <TextView
                        android:id="@+id/send_data_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_data"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Send Form" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/review_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_bg"
                        android:src="@drawable/edit"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"  >
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/review_data"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:text="Edit Form"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/manage_forms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_bg"
                        android:src="@drawable/delete"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"  >
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/manage_forms"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:text="Delete Form"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/row3"
                android:layout_marginTop="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/get_forms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:src="@drawable/get_forms" >
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/get_forms"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Get Forms" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center" >

                    <ImageButton
                        android:id="@+id/settings_btn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:src="@drawable/settings"
                        android:gravity="center_horizontal" >
                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_btn"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Settings" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>