<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/enter_data_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/enter_data"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:gravity="center_horizontal"
                            android:scaleType="fitCenter"
                            android:src="@drawable/fill"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/enter_data_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Fill Form" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/send_data_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">


                        <ImageButton
                            android:id="@+id/send_data"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:scaleType="fitCenter"
                            android:src="@drawable/send"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/send_data_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_data_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Send Form" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/review_data_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/review_data"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:gravity="center_horizontal"
                            android:scaleType="fitCenter"
                            android:src="@drawable/edit"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/review_data_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Edit Form" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">


                    <LinearLayout
                        android:id="@+id/manage_forms_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/manage_forms"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:gravity="center_horizontal"
                            android:scaleType="fitCenter"
                            android:src="@drawable/delete"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/manage_forms_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Delete Form" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/get_forms_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/get_forms"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:scaleType="fitCenter"
                            android:src="@drawable/get_forms"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/get_forms_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Get Forms" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/settings_btn_container"
                        android:layout_width="@dimen/icon_boundary"
                        android:layout_height="@dimen/icon_boundary"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_bg"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/settings_btn"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/state_color"
                            android:gravity="center_horizontal"
                            android:scaleType="fitCenter"
                            android:src="@drawable/settings"></ImageButton>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_btn_container"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:text="Settings" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>